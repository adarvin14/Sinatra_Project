<h2>Edit A Song</h2>

<form method="POST" action="/songs/<%= @song.id %>">
<input type="hidden" id="hidden" name="_method" value="patch">
    <p> Title: <br> <input type="text" name="title" value="<%= @song.title %>" placeholder="Song Title"></p>
    <p> Artist: <br> <input type="text" name="artist" value="<%= @song.artist %>" placeholder="Artist "></p>
    <p> Album: <br> <input type="decimal" name="album" value="<%= @song.album %>" placeholder="Album"></p>
    <p> Release Date: <br> <input type="integer" name="release_date" value="<%= @song.release_date %>" placeholder="release_date"></p>
    <p> Genre: <br> <input type="text" name="genre" value="<%= @song.genre %>" placeholder="Genre"></p>
    <br>

    <input type="submit" value="Submit Edit">
</form>